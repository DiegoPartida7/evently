%section.section-conten.padding-y{:style => "min-height:50vh"}
  .card.mx-auto.my-5{:style => "max-width: 380px;"}
    .card-body
      %h1.h2.text-center.mb-4 Iniciar sesión
      .mb-3
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.input :email, required: true, autofocus: true, placeholder: 'Ej. juan@acme.com', label: 'Correo electrónico:'
          = f.input :password, required: false, placeholder: "", label: "Contraseña:"

          - if devise_mapping.rememberable?
            .form-check.mb-3
              %label.form-check-label
                = f.check_box :remember_me, class: "form-check-input"
                Recuérdame
          .form-group
            = f.submit "Ingresar", class: "btn btn-primary btn-block btn-lg", data: { disable_with: 'Procesando...' }

    .card-footer.text-center
      = render "devise/shared/links"



